{
  "name": "iobroker.openweathermap",
  "version": "0.4.2",
  "description": "ioBroker Openweathermap Adapter",
  "author": "bluefox <dogafox@gmail.com>",
  "contributors": [
    "bluefox <dogafox@gmail.com>"
  ],
  "homepage": "https://github.com/ioBroker/ioBroker.openweathermap",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ioBroker/ioBroker.openweathermap"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "keywords": [
    "ioBroker",
    "weather",
    "home automation",
    "openweathermap"
  ],
  "dependencies": {
    "@iobroker/adapter-core": "^3.0.3",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.6.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.6.0",
    "@alcalzone/release-script-plugin-license": "^3.5.9",
    "@iobroker/vis-2-widgets-react-dev": "^0.4.6",
    "@iobroker/vis-2-widgets-testing": "^0.3.0",
    "@iobroker/testing": "^4.1.0",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/gulp": "^4.0.13",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.7",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.16",
    "@types/sinon-chai": "^3.2.9",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.46.0",
    "gulp": "^4.0.2",
    "mocha": "^10.2.0",
    "proxyquire": "^2.1.3",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "typescript": "^5.1.6"
  },
  "main": "main.js",
  "files": [
    "admin/",
    "lib/",
    "widgets/",
    "main.js",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "test-gui": "mocha ./test/*.gui.js --exit",
    "prepublishOnly": "gulp",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint",
    "build": "gulp",
    "release": "release-script",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes",
    "update-packages": "ncu --upgrade && cd src-widgets && ncu --upgrade && cd ..",
    "npm": "npm i && cd src-widgets && npm i -f"
  },
  "bugs": {
    "url": "https://github.com/ioBroker/ioBroker.openweathermap/issues"
  },
  "readmeFilename": "README.md"
}
